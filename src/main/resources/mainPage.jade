html
    head
        script(type="text/javascript", src="http://code.jquery.com/jquery-1.8.3.min.js")
        meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
    body
        form(action="/search", method="GET", enctype="application/x-www-form-urlencoded", accept-charset="UTF-8")
            input(type="text", name="query", id="query", value="")
            input(type="button", name="search", value="search", onclick="$.get('/search?query='+$('#query').val(), function (data) {$('#result').val(''); $('#result').html(data);});")

        div#result
